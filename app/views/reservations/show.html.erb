  <div class="card mb-3" id="appart">
    <div class="row show_image">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <% if @reservation.location.images.present? %>
          <div class="carousel-inner">
            <% @reservation.location.images.each do | image | %>
              <div class="carousel-item <%= "active" if image.id == @reservation.location.images.first.id  %>" >
                <%= image_tag(image.libelle_url(:large), width: '100%', height: '400px') if image.libelle.present? %>
              </div>
            <% end %>
          </div>
  
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
        <% else %>
          <div>
            <%= image_tag image_url('maison.png'), width: '100%', height: '400px' %>
          </div>
        <% end %>
        </div>
    </div>
      <div class="card-body">
        <div class="row">
        <div class="col-md-6">
          <h3 class="card-title" id="titre">
            <%= @reservation.location.titre %> 
            <span class="badge badge-warning float-md-right" style="font-size: 14px;"><%= @reservation.location.type.libelle %></span> 
            <p class="card-text"><small class="text-muted"><%= @reservation.location.adresse %></small></p>
          </h3>

          <hr>
          <p><%= @reservation.location.description %></p>
          <div class="row">
            <div class="col-md-8">
                <h5><%= "Caracteristiques:" if @reservation.location.nombre_salon != nil || @reservation.location.nombre_chamber != nil || @reservation.location.nombre_toillete %> </h5>
                <ul>
                  <% if @reservation.location.nombre_salon != nil %>
                  <li>
                    <h5>Salon: <small><%= @reservation.location.nombre_salon %></small></h5>
                  </li>
                  <% end %>
    
                  <% if @reservation.location.nombre_chamber != nil %>
                  <li>
                    <h5>Chambre: <small><%= @reservation.location.nombre_chamber %></small></h5>
                  </li>
                  <% end %>
    
                  <% if @reservation.location.nombre_toillete != nil %>
                  <li>
                    <h5>Toillete: <small><%= @reservation.location.nombre_toillete %></small></h5>
                  </li>
                  <% end %>
                  <li>
                    <h5>Prix: <small><%= @reservation.location.prix %> Fcfa / <%= @reservation.location.duree %></small></h5>
                  </li>
                </ul>
    
            </div>
            <div class="col-md-4 d-flex align-items-end justify-content-end">
                <%= link_to  "Detail", location_path(@reservation.location.id), class: "btn btn-success" %>
            </div>
          </div>
        </div>
        <div class="col-md-6">
            <h3 class="card-title">
              <%= "#{@reservation.nom} #{@reservation.prenom}" %>
              <span class="badge badge-<%= @reservation.confirmer ? "success" : "danger" %> float-md-right" style="font-size: 14px;"><%= @reservation.confirmer ? "Confirmer" : "Non confirmer" %></span>
              <p class="card-text"><small class="text-muted"> <%= "#{@reservation.email}" %> </small></p>
            </h3>
            
              <hr>
            <div class="row">
              <div class="col-md-8">
                <ul>
                  <li>
                    Adulte: <b><%= @reservation.nombre_adulte %></b>
                  </li>
                  <li>
                    Enfant: <b><%= @reservation.nombre_enfant %></b>
                  </li>
                  <li>
                    Pour la date du <b><%= @reservation.debut %></b> au <b><%= @reservation.fin %></b>
                  </li>
                </ul>
              </div>
              <div class=" col-md-4 d-flex align-items-end justify-content-end">
                <% if Admin? && @reservation.confirmer == false %>
                  <%= link_to  "Confirmer la reservation", confirmer_reservations_path(@reservation.id), class: "btn btn-outline-success btn-sm" %>
                <% end %>
              </div>
            </div>
        </div>
        </div>
    </div>
  </div>
