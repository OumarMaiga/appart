<div class="row">
        <div class="col-md-2">
            <a class="navbar-brand" href="/">APPART</a>
        </div>
        <div class="col-md-6">
            <ul class="nav d-flex justify-content-center">
                <li class="nav-item">
                    <%= link_to "Locations", locations_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">A propos</a>
                </li>
                <% if user_signed_in? %>
                    <% if Admin? %>
                        <li class="nav-item">
                            <a class="nav-link" href="<%= notifications_path %>">
                                Notifications <span class="badge badge-danger"><%= notification_non_vue.to_s %></span>
                            </a>
                        </li>
                        <li class="nav-item"> 
                            <%= link_to "Les reservations", reservations_path, class: "nav-link" %>
                        </li>
                        <li class="nav-item"> 
                            <%= link_to "Users", users_path, class: "nav-link" %>
                        </li>
                    <% else %>
                        <li class="nav-item">
                            <%= link_to "Mes reservations", my_reservation_reservations_path, class: "nav-link" %>
                        </li>
                    <% end %>
                <% end %>
            </ul>
        </div>
        <div class="col-md-4 d-flex justify-content-end">
            <% if user_signed_in? %>
                <%= link_to  "Deconnexion", destroy_user_session_path, method: :DELETE, data: { confirm:'Voulez-vous vous deconnecter ?' }, class: 'btn btn-primary' %>
            <% else %>
                <%= link_to  "Inscription", new_user_registration_path, class: 'btn btn-outline-primary"' %> <%= link_to  "Connexion", new_user_session_path, class: 'btn btn-outline-primary"' %>
            <% end %>
        </div>
</div>