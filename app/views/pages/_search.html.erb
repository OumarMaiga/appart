<div class="search_container">
    <h3>Recherche</h3>
        <%= form_tag(search_path, method: :get) do %>
            <div id="search-data" class="input-field search-bar" data-adresses="<%= @adresses.to_json %>">
                    
                    <%= text_field_tag :query, nil, autocomplete: 'off', placeholder: "Quartier..." %><br><br>
                    Du<br>
                    <%= date_field_tag :debut, "Date de debut" %><br><br>
                    Au<br>
                    <%= date_field_tag :fin, "Date de fin" %><br><br>
                    <!--<%= number_field_tag :nombre_personne %>-->
                <%= submit_tag 'Rechercher', :class => 'btn btn-outline-primary btn-md' %>
            </div>
        <% end %>
</div>