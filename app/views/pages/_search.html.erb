<div class="search-container">
    <h3 class="text-center">Recherche</h3>
        <%= form_tag(search_path, method: :get) do %>
            <div id="search-data" class="input-field search-bar" data-adresses="<%= @adresses.to_json %>">
                <div class="form-group">
                    <%= text_field_tag :query, nil, autocomplete: 'off', placeholder: "Quartier...", class: "form-control" %>
                </div>
                <div class="form-group">
                    <label for="debut">Du</label>
                    <input type="text" id="debut" class="flatpickr-input form-control" placeholder="Date de debut" name="debut" />
                </div>
                <div class="form-group">
                    <label for="fin">Au</label>
                    <input type="text" id="fin" class="flatpickr-input form-control" placeholder="Date de fin" name="fin" class="form-control" />
                </div>
                    <!--<%= number_field_tag :nombre_personne %>-->
                <div class="form-group">
                    <%= submit_tag 'Rechercher', :class => 'btn btn-outline-warning btn-md' %>
                </div>
            </div>
        <% end %>
</div>