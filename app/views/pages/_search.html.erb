<div class="search-container">
    <h3 class="text-center">Recherche</h3>
        <%= form_tag(search_path, method: :get) do %>
            <div id="search-data" class="input-field search-bar" data-adresses="<%= @adresses.to_json %>">
                    <%= text_field_tag :query, nil, autocomplete: 'off', placeholder: "Quartier..." %><br><br>
                    Du<br><input type="text" id="debut" class="flatpickr-input" placeholder="Date de debut" name="debut" /><br><br>
                    Au<br><input type="text" id="fin" class="flatpickr-input" placeholder="Date de fin" name="fin" /><br><br>
                    <!--<%= number_field_tag :nombre_personne %>-->
                <%= submit_tag 'Rechercher', :class => 'btn btn-outline-warning btn-md' %>
            </div>
        <% end %>
</div>