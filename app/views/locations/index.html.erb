<div class="container">
  <div class="row">
    <div class="col-3">
      <h3>Filtre la recherche</h3>
    </div>
    <div class="col-9">
  <% @locations.each do |location| %>
      <div class="row" id="appart">
        <div class="col-4">
          <% if location.images.present? %>
          <div class="carousel slide" data-ride="carousel" id="carouselExampleIndicators">
              <div class="carousel-inner">
            <% location.images.each do |image| %>
              <div class="carousel-item">
                <%= image_tag image.libelle_url, class: "d-block w-100", heigth: '90%', width: '250px' %>
              </div>
            <% end %>
              </div>
          </div>
          <% else %>
            <%= image_tag 'maison.png', heigth: '90%', width: '250px' %>
          <% end %>
        </div>
        <div class="col-6">
          <h3><%= location.titre %></h3>
          <p><%= location.adresse %></p>
          <hr>
          <ul>
            <li>
              <% location.nombre_chamber "chambres," if location.nombre_chamber  %> <% location.nombre_salon "salons et" if location.nombre_salon  %> <% location.nombre_toillete "toilletes" if location.nombre_toillete  %>
            </li>
            <li>
              <%= location.description %>
            </li>
            <li>
              Reservation possible avec orange money
            </li>
          </ul>
        </div>
        <div class="col-2">
          <div class="row d-flex justify-content-end"><%= location.prix %> F cfa / nuit</div>
          <div class="row d-flex justify-content-end">
            <%= link_to  "Detail", location_path(location.id), class: "btn btn-success" %>
          </div>
        </div>
    </div>
  <% end %>
    </div>
  </div>
</div>
