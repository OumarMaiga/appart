<p id="notice"><%= notice %></p>

<h1>Locations</h1>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h3>Filtre la recherche</h3>
    </div>
    <div class="col-md-9">
  <% @locations.each do |location| %>
      <div class="card md-3" id="appart">
        <div class="row no-gutters">
        <div class="col-md-4">
          <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <% if location.images.present? %>
                <div class="carousel-inner">
                  <% location.images.each do |image| %>
                    <div class="carousel-item <%= "active" if image.id == location.images.first.id  %>">
                      <%= image_tag image.libelle_url, class: "d-block w-100", heigth: '90%', width: '250px' %>
                    </div>
                  <% end %>
                </div>
            <% else %>
              <div class="carousel-item">
                <%= image_tag 'maison.png', heigth: '90%', width: '250px' %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h3 class="card-title" id="titre">
              <%= location.titre %> 
              <span class="badge badge-warning float-md-right" style="font-size: 14px;"><%= location.type.libelle %></span> 
              <p class="card-text"><small class="text-muted"><%= location.adresse %></small></p>
            </h3>
            <hr>
          <div class="row">
            <div class="col-md-8">
              <ul>
                <li>
                  <%= location.description %>
                </li>
              </ul>
            </div>
            <div class="col-md-4">
              <div class="row d-flex justify-content-end"><%= location.prix %> F cfa / nuit</div>
              <div class="row d-flex justify-content-end">
                <%= link_to  "Detail", location_path(location.id), class: "btn btn-success" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>
  <% end %>
    </div>
  </div>
</div>
